extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        h1= project.project_name

        p= project.description

      .project-tech-links-box.box
        h6 Technologies
        ul

          each tech in project.technologies
            li= tech

        a.btn-link(href=`${project.live_link}`, target='_blank') Live Demo
        a.btn-link(href=`${project.github_link}`, target='_blank') GitHub Repo

    .project-img-box.box

      img.project-img(src=`${project.image_urls.landscape}`, alt='a landscape image of the program in use')
      img.project-img(src=`${project.image_urls.landscape_2}`, alt='a landscape image of the program in use')
      img.project-img(src=`${project.image_urls.landscape_3}`, alt='a landscape image of the program in use')

    nav.nav
      a(href='/')
        span &larr;
        |  Back
